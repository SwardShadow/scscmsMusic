{
  "manifest_version": 2,
  "name": "SCSCMS音乐播放器",
  "version": "1.0.0",
  "description": "github.com/scscms/ 网页播放器",
  "icons":  {
    "128": "img/icons.png"
  },
  "background":  {
    "page": "background.html"
  },
  "browser_action":  {
    "default_icon": "img/icons.png",
    "default_title": "scscms 网页播放器",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content-script.js"],
      "run_at": "document_start"
    }
  ],
  "permissions":  [
    "contextMenus", // 右键菜单
    "notifications", // 通知
    "webRequest","http://music.taihe.com/*", // web请求
    "storage" // 插件本地存储
  ],
  "web_accessible_resources": [],
  "homepage_url": "https://github.com/scscms/",
  "options_ui":  {
    "page": "options.html",
    "chrome_style": true
  }
}
